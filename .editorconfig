# EditorConfig is awesome: http://EditorConfig.org

# line endings: lf (Unix), cr or crlf (DOS/Windows)
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8

# Remove whitespace characters preceding the end of a line
trim_trailing_whitespace = true

# Files have a blank line at the end
insert_final_newline = true

[{package.json,bower.json,.travis.yml,*.js,*.yml,*.html,*.xml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
